{
  "extends": ["tslint-react", "tslint-config-airbnb"],

  "linterOptions": {
    "exclude": ["**/*.json", "**/*.{test,spec}.{ts,tsx}"]
  },
  "rules": {
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-trailing-underscore",
      "allow-pascal-case",
      "allow-snake-case"
    ],
    "import-name": [false],
    "jsx-no-multiline-js": [false],
    "jsx-no-lambda": false,
    "no-increment-decrement": false,
    "max-line-length": [true, 200],
    "jsx-wrap-multiline": false,
    "function-name": [
      true,
      {
        "private-method-regex": "^_[a-zA-Z0-9]+$",
        "static-method-regex": "^[a-z][\\w\\d]+$"
      }
    ],
    "interface-name": [true, "always-prefix"],
    "arrow-parens": false,
    "ter-arrow-parens": false,
    "ter-indent": false,
    "ter-computed-property-spacing": false,
    "no-console": [true, "log", "debug", "info", "time", "timeEnd", "trace"],
    "no-eval": true,
    "no-debugger": true
  },
  "jsRules": {
    "no-empty": true,
    "no-eval": true,
    "no-debugger": true
  }
}
